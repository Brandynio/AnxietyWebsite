<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet" />
</head>
<body>
	<div >
		<div class="navbar">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Serenity", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li class="homeColor">@Html.ActionLink("Home", "Index", "Home")</li>
					<li class="homeColor">@Html.ActionLink("Activities", "Activities", "Home")</li>
				</ul>
				<audio id="audio" onended='loadPlaylist()' src='~/Content/music/bensound-betterdays.mp3' controls autoplay></audio>
				<script src="~/Scripts/play.js"></script>
				@Html.Partial("_LoginPartial")
			</div>
        </div>
    </div>
    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>Music: www.bensound.com</p>
            <p>&copy; @DateTime.Now.Year - Serenity</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
